# TrueCivic environment variables (copy to .env for local development)
# Secrets are intentionally left blank. Obtain values from Railway CLI.

# --- AI / Vercel SDK ---
OPENAI_API_KEY=
AI_GATEWAY_API_KEY=
VERCEL_AI_MODEL=gpt-4o

# --- Django Backend ---
DJANGO_SECRET_KEY=
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_DEBUG=True
DATABASE_URL=

# --- Kafka ---
KAFKA_URL=
KAFKA_PUBLIC_URL=
KAFKA_CLIENT_ID=truecivic-backend
KAFKA_GROUP_ID=truecivic-jobs
KAFKA_JOBS_TOPIC=truecivic.jobs

# --- Qdrant Vector Store ---
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=knowledge_chunks
QDRANT_TIMEOUT_SECONDS=5

# --- Search / Retrieval ---
BM25_SEARCH_ENABLED=True
EMBEDDING_DIMENSION=1536

# --- Frontend (React) ---
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_JURISDICTIONS=canada-federal

# --- NIA Context Awareness ---
NIA_API_KEY=
NIA_ENDPOINT=
